<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/post_bg">

        <androidx.cardview.widget.CardView
            cardPreventCornerOverlap="false"
            contentPadding="0dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <ImageView
                        android:id="@+id/postUserPhoto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="16dp"
                        tools:background="@color/red" />

                    <TextView
                        android:id="@+id/postUserFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_toEndOf="@id/postUserPhoto"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        tools:text="Burak Vanli" />

                    <TextView
                        android:id="@+id/postUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:layout_toEndOf="@id/postUserPhoto"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/hintColor"
                        android:textSize="14sp"
                        tools:text="Bsvanli" />

                    <Button
                        android:id="@+id/favoriteNormalBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:drawableTop="@drawable/ic_favorite_empty"
                        android:fontFamily="sans-serif-medium"
                        android:minWidth="0dp"
                        android:paddingStart="18dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        tools:text="51K" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/postPicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f6f6f6" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.8"
                        android:src="@drawable/post_gradient_bg" />

                    <TextView
                        android:id="@+id/postDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="24 MARCH 2016" />

                    <Button
                        android:id="@+id/postCommentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/icon_comment_big"
                        android:drawablePadding="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="100" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <TextView
                        android:id="@+id/postTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="50dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        tools:text="Google hires Airbnbâ€™s Shaun Stewart to help bring" />

                    <ImageView
                        android:id="@+id/postLockIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/ic_lock_colored" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>