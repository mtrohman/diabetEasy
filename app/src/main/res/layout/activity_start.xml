<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/buttons"
        android:gravity="center"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Wordpress Uygulaması"
            android:layout_marginBottom="20dp"
            android:textSize="26sp"
            android:textColor="@color/text"/>
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/hintColor"
            android:lineSpacingExtra="8dp"
            tools:text="Flink, birbirinden farklı içerikler ile yeni bilgiler edinmenizi sağlamak amacıyla sizlere yardımcı olur."
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@drawable/solid_button_bg"
            android:text="@string/sign_in"
            android:textSize="16sp"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="34dp"/>

        <Button
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@drawable/line_button_bg"
            android:text="@string/register"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="34dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>


    </LinearLayout>

</RelativeLayout>